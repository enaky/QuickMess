<!-- Login Form -->

<div class="row justify-content-center pt-5 bg-light h-100">

    <div class="d-flex justify-content-center p-2 w-25 bg-dark" style="border-radius: 20px; border: solid #ffa500;">
        <form action="/verificare-autentificare" method="post">
            <% if (messageError) { %>
                <div class="text-center p-1 m-1" style="color: #ff0000">*** Date invalide ***</div>
            <% } %>
            <div class="input-group">
                <div class="input-group-prepend">
                <span class="input-group-text">
                    <i class="fa fa-user" aria-hidden="true"></i>
                </span>
                </div>
                <input type="text" id="login" name="login" placeholder="username" value="<%= user %>"
                       style="color:#f700ff" required>
            </div>

            <div class="input-group mt-3">
                <div class="input-group-prepend">
                <span class="input-group-text">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                </span>
                </div>
                <input type="password" id="password" name="login" placeholder="password" required>
            </div>
            <div class="d-flex justify-content-center login_container mt-3">
                <div class="col">
                    <button type="submit" class="btn  btn-primary">Login</button>
                </div>
                <div class="col">
                    <a type="submit" href="/register" class="btn btn-primary">ÃŽnregistrare</a>
                </div>
            </div>
        </form>
    </div>
</div>
