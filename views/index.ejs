<div class="container text-center">
    <div class='container-fluid'>
        <h1 class="m-3" style="color: red">Welcome
            <% if (user){ %>, <%= user %>
            <% } %>
            !
        </h1>
    </div>
</div>
<div class="flex my-4">
    <div class="row my-2 ">
        <div class="card col-12 col-lg-2 col-md-2 col-sm-12 ml-5 align-self-start profile_container px-2 "
             style="width: 100%;">
            <img class="card-img-top mt-3" id="profile_photo" src="images/male.png">
            <div class="card-body mt-2">
                <h2 id="profile_name" class="card-title">Ricardo Sanchez</h2>
                <p class="card-text">Age: <span id="profile_age"></span></p>
                <p class="card-text">Email: <span id="profile_email"></span></p>
            </div>
        </div>
        <div class="col-md-1 col-lg-1"></div>

        <div class="card col-12 col-lg-5 col-md-5 col-sm-12 posts_container">
            <h2 class="text-center my-2">Posts</h2>
            <form id="post_send_form" class="mt-2">
                <div class="input-group">
                <textarea class="form-control" name="" id="post-textarea" maxlength="300"
                          placeholder="Start Typing..." autofocus></textarea>
                    <div class="input-group-append">
                        <button type=submit class="input-group-text send_btn"><i class="fas fa-location-arrow"></i>
                        </button>
                    </div>
                </div>
            </form>
            <div id="the-count" class="text-right">
                <span id="current">0</span>
                <span id="maximum">/ 300</span>
            </div>

            <div id="posts" class="card-body mt-2">

                <div class="post my-4">
                    <div class="mx-4 mt-4 post_text">FRqwfqwfwqef qwef qwef qw</div>
                    <div class="text-right mb-2 mx-3" style="color: darkgoldenrod">12:09:23</div>
                </div>
            </div>
        </div>
        <div class="col-md-1 col-lg-1"></div>

        <div class="card col-12 col-lg-2 col-md-2 col-sm-12 mr-5 notification_container">
            <h2 class="text-center my-2">Notifications</h2>
        </div>

    </div>
</div>
